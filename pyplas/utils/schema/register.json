{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Registering Problem Validate",
    "type": "object",
    "properties": {
        "title": {"type": "string"},
        "page": {
            "type": "object",
            "properties": {
                "header": {
                    "type": "object",
                    "properties": {
                        "summary": {"type": "string"},
                        "source": {"type": "string"},
                        "env": {"type": "string"}
                    },
                    "required": ["summary", "source", "env"]
                },
                "body": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {"$ref": "#/definitions/code"},
                            {"$ref": "#/definitions/explain"},
                            {"$ref": "#/definitions/question"}
                        ]
                    }
                }
            },
            "required": ["header", "body"]
        },
        "answers": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {"type": "string"}
            }
        },
        "explanations": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "anyOf": [
                        {"$ref": "#/definitions/code"},
                        {"$ref": "#/definitions/explain"}
                    ]
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["title", "page", "answers", "explanations"],

    "definitions": {
        "code": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["code"]
                },
                "content": {"type": "string"},
                "readonly": {"type": "boolean"}
            },
            "required": ["type", "content"]
        },
        "explain": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["explain"]
                },
                "content": {"type": "string"}
            },
            "required": ["type", "content"]
        },
        "question": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["question"]
                },
                "q_id": {"type": "string"},
                "ptype": {"type": "integer"},
                "conponent": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "anyOf": [
                            {"$ref": "#/definitions/code"},
                            {"$ref": "#/definitions/explain"}
                        ]
                    }
                },
                "question": {"type": "string"},
                "editable": {"type": "boolean"}
            },
            "required": ["type", "q_id", "ptype", "conponent", "question", "editable"]
        }
    }
}